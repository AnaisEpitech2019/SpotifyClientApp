<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?selectableItemBackground"
    android:layout_margin="@dimen/margin_button">

    <ImageView
        android:id="@+id/img"
        android:layout_width="@dimen/size_img"
        android:layout_height="@dimen/size_img"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_img"
        android:layout_below="@+id/img"
        android:orientation="vertical"
        android:background="@color/grey"
        android:padding="@dimen/padding_text">

        <TextView
            android:id="@+id/name_artist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/size_text_main_button"
            android:textColor="@color/black"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_followers_fix"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/followers"
                android:textSize="@dimen/size_text"
                android:textColor="@color/dark_grey" />

            <TextView
                android:id="@+id/nb_followers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_followers_fix"
                android:textSize="@dimen/size_text"
                android:textColor="@color/black"/>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>